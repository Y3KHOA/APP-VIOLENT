<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"

        app:cardElevation="150dp"
        app:cardCornerRadius="6dp"
        android:layout_margin="6dp"
        android:id="@+id/item_media_video"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp"


            >

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_play_arrow_24" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageava"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@drawable/notifition">

            </ImageView>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imageava"
                android:layout_toRightOf="@+id/imageava"
                android:text="Ten cua Video"
                android:textSize="14dp"


                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                android:layout_toRightOf="@+id/imageava"
                android:text="Ngày nhận video"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/txt_time_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_action"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/imageava"
                android:text="Ngày nhận video"
                android:textSize="12dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>