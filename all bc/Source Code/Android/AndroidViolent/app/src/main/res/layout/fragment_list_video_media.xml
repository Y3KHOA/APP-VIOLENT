<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ListVideoMediaFragment"

    >

    <RelativeLayout
        android:id="@+id/lblVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_app"
        android:paddingStart="6dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lineHeight="8pt"
            android:text="Danh sÃ¡ch video"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:textSize="6pt" />

        <ImageView
            android:id="@+id/btnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textTime"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_calendar_month_24"

            tools:ignore="SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/spinner_dropdown"
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btnTime"
            android:spinnerMode="dropdown"
            android:visibility="gone"

            tools:ignore="SpeakableTextPresentCheck" />
        <Spinner
            android:id="@+id/spinner_Label"

            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/spinner_dropdown"
            android:spinnerMode="dropdown"
            android:visibility="gone"
            tools:ignore="SpeakableTextPresentCheck"

             />


    </RelativeLayout>
    <!--    <TextView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="60dp"-->
    <!--        android:text="Video Violent"-->
    <!--        android:id="@+id/lblVideo"-->
    <!--        android:textSize="36dp"-->
    <!--        android:textAlignment="center"-->
    <!--        />-->

    <ListView
        android:id="@+id/list_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lblVideo"
        android:layout_marginTop="0dp"

        android:background="@color/background_app"
        tools:listitem="@layout/list_video_media_item"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPrevPage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/background_app"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="80dp"
        android:id="@+id/btnNextPage"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/background_app"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        tools:ignore="SpeakableTextPresentCheck" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:id="@+id/btnPrevHour"
        android:backgroundTint="@color/background_app"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="80dp"
        android:id="@+id/btnNextHour"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/background_app"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPrevLabel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/background_app"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNextLabel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"

        android:backgroundTint="@color/background_app"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>