<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginBottom="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FAF5F5"
        app:cardElevation="150dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="6dp"
        android:id="@+id/item_notification"

        >
        <RelativeLayout
            android:id="@+id/layout_notification"
            android:layout_width="match_parent"
            android:paddingTop="4dp"

            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:lineHeight="24dp"
                android:drawableLeft="@drawable/ic_sharp_notifications_24"
                android:drawablePadding="4dp"
                android:text="Hệ thống thông báo bạo lưc"

                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="content"
                android:layout_marginBottom="6dp"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_time_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_below="@id/txt_content"
                android:layout_marginStart="10dp"
                android:text="time_notification"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"


                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>